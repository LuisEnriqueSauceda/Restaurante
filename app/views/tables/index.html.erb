<div class="container">
  <p id="notice"><%= notice %></p>
  <h3 class="card center-align">Lista de mesas</h3>
      <%cont=0%>
      <% @tables.each do |table| %>
        <%if cont%2==0 %>
          <div class="row">
        <%end%>
          <div class="col s12 m6">
            <div class="card z-depth-4">
              <div class="card-content ">
                <span class="card-title"><%=table.name%></span>
                <p><%=table.description%></p>
              </div>
              <div class="card-action">
                <%=link_to 'Ordenes de la mesa',table ,class:"amber-text text-darken-4"%>
              </div>
            </div>
          </div>
        <%if cont%2!=0 %>
          </div>
        <%end%>
        <%cont+=1%>
      <% end %>
      <div class="row">
         <div class="col s12 m12">
            <div class="card z-depth-4">
              <div class="card-content">
                <span class="card-title">A domicilio</span>
                <p>Aqui  se encuentran todas las ordenes a domicilio</p>
              </div>
              <div class="card-action">
                <%=link_to 'Ordenes de la mesa',domicilio_path,class:"amber-text text-darken-4"%>
              </div>
            </div>
          </div>
        
      </div>
    </div>

