<div class="container">
    <div class="card">
        <h1 class="center-align">Reporte de orden</h1>
        <h4 class="center-align">Total: <%=@order.platillos.sum(:price)%></h4>
        <div class="container">
            <div class="row">
                <div class ="col s12 m6 l3">
                    <a class="waves-effect waves-light btn">Imprimir ticket</a>
                </div>
                <div class="col s12 m6 l3 offset-l6">
                    <%=link_to "Finalizar",paynow_path,method: :post,class:"waves-effect waves-light btn"%>
                </div>
            </div>
        </div>
        </br>
    </div>
    <%=@order.status%>
    <table class="responsive-table">
    <thead>
      <tr>
          <th data-field="id">Platillo</th>
          <th data-field="name">Precio</th>
          <th data-field="name"></th>
      </tr>
    </thead>
    <tbody>
        <%@order.saucerOrders.each do |saucerOrder|%>    
          <tr>
            <td><%=saucerOrder.platillo.name%></td>
            <td><%="$#{saucerOrder.platillo.price}"%></td>
            <td><%= link_to 'Cancelar', saucerOrder, method: :delete, data: { confirm: 'Are you sure?' },class:"waves-effect red darken-1 btn" %></td>
            </tr>
        <%end%>
    </tbody>
  </table>
  
</div>